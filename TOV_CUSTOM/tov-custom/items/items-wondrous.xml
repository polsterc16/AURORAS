	<element name="Unspillable Bottle of Ink" type="Magic Item" source="ToV Campaign Custom" id="ID_TOV_CAMPAIGN_MAGIC_ITEM_UNSPILLABLEBOTTLEOFINK">
		<description>
			<p>This bottle can hold 1 ounce of ink.</p>
			<p class="indent">The contents of this bottle cannot be spilled unintentionally.</p>
		</description>
		<setters>
			<set name="category">Wondrous Items</set>
			<set name="cost" currency="gp">0</set>
			<set name="weight" lb="0">0 lb.</set>
			<set name="type">Wondrous Item</set>
			<set name="rarity">Common</set>
		</setters>
	</element>
	<element name="Shirt of 'Fire Resistance'" type="Magic Item" source="ToV Campaign Custom" id="ID_TOV_CAMPAIGN_MAGIC_ITEM_FFT_SHIRTOFFIRERESISTANCE">
		<description>
			<p>This cloth shirt seems to constantly secrete water, keeping it wet.</p>
